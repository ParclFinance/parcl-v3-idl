{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["index.ts", "parcl-v3-idl.json", "parcl-v3-idl.ts"],
  "exclude": ["node_modules", "dist"]
}